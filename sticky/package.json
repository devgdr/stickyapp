{
  "name": "@stickyvault/desktop",
  "version": "1.0.0",
  "description": "StickyVault Desktop App - Linux & Windows",
  "author": "StickyVault Team",
  "homepage": "https://github.com/stickyvault/stickyvault",
  "repository": {
    "type": "git",
    "url": "https://github.com/stickyvault/stickyapp.git"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder --publish never",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite --port 5173 --strictPort\" \"electron . --no-sandbox\"",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "@stickyvault/core": "file:../core",
    "@uiw/react-md-editor": "^3.25.6",
    "dropbox": "^10.34.0",
    "electron-store": "^8.1.0",
    "node-notifier": "^10.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.stickyvault.desktop",
    "productName": "StickyVault",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "assets/icon.png",
      "maintainer": "StickyVault Team",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "protocols": [
      {
        "name": "StickyVault",
        "schemes": [
          "stickyvault"
        ]
      }
    ]
  }
}
